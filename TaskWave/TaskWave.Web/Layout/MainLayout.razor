@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Dense Color="Color.Primary">
        <MudText>Task Wave</MudText>
    </MudAppBar>
    <MudDrawer Elevation="1" Open ClipMode="DrawerClipMode.Always" Variant="@DrawerVariant.Persistent">
        <MudNavMenu Color="Color.Primary" Margin="Margin.Normal">
            <MudNavLink Href="/tasks" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ListAlt">Tasks</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="px-8 pt-18 pb-8">
        @Body
    </MudMainContent>
</MudLayout>